@model IEnumerable<Employee>
@{
    ViewData["Title"] = "List of Employees";
}


<div class="card-deck container">
    <div class="row">
    @foreach(var emp in Model)
    {
            var photoPath = "~/images/" + (emp.PhotoPath ?? "bw.jpg");

            <div class="card col-md-3 m-1" style="min-width:18rem; max-width:30.5%">
                <div class="card-header">
                    <h3>@emp.Name</h3>
                </div>
                <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true">
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="details" asp-route-id="@emp.EncryptedId" class="btn btn-primary m-1">View</a>
                    <a asp-controller="home" asp-action="edit" asp-route-id="@emp.Id" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        
    }
    </div>
</div>


